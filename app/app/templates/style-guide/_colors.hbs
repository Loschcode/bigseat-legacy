<h3 class="style-guide__title">Colors</h3>

<div class="style-guide__example">
  <h4 class="style-guide__subtitle">Gray</h4>
  <div class="style-guide__swatches">
    {{#each (array 100 200 300 400 500 600 700 800 900) as |variant|}}
      <div class="style-guide__swatch style-guide__swatch--gray-{{variant}}">
        <div class="style-guide__swatch-value">{{variant}}</div>
      </div>
    {{/each}}
  </div>

